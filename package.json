{
  "name": "martins-keptn--service",
  "version": "0.0.1",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "copy-assets": "cp -R src/views dist/",
    "build": "npm-run-all clean lint tsc copy-assets",
    "serve": "node dist/server.js",
    "tsc": "tsc",
    "dev:start": "npm-run-all build serve",
    "dev": "nodemon --watch src -e ts,ejs --exec npm run dev:start",
    "test": "echo \"Testing...\" && nyc --reporter=text nyc mocha && nyc report",
    "lint": "tslint --project tslint.json"
  },
  "keywords": [
    "pitometer"
  ],
  "author": "",
  "license": "Apache-2.0",
  "devDependencies": {
    "copyfiles": "^2.1.0",
    "nock": "^10.0.6",
    "nodemon": "^1.18.10",
    "npm-run-all": "^4.1.5",
    "nyc": "^13.3.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.4",
    "source-map-support": "^0.5.10",
    "ts-node": "^8.0.2",
    "tslint": "^5.12.1",
    "tslint-config-airbnb": "^5.11.1",
    "typescript": "^3.3.3"
  },
  "dependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "^4.16.1",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.6",
    "@types/sinon": "^7.0.6",
    "axios": "^0.18.0",
    "body-parser": "^1.18.3",
    "chai": "^4.2.0",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "inversify": "^5.0.1",
    "inversify-express-utils": "^6.3.2",
    "kubernetes-client": "^6.11.0",
    "mocha": "^6.0.2",
    "moment": "^2.24.0",
    "mongoose": "^5.4.21",
    "reflect-metadata": "^0.1.13",
    "typescript-collections": "^1.3.2"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/server.ts",
      "src/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "html",
      "cobertura"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
